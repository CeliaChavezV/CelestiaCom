---
import { getCollection } from 'astro:content';

interface Props {
  title: string;
}

const { title } = Astro.props;
const pages = await getCollection('page');
const isBrowser = typeof window !== 'undefined';
const isLoggedIn = isBrowser ? !!localStorage.getItem('celestia_currentUser') : false;
---

<!doctype html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <style>
    :root {
      --azul-profundo: #020c1b;
      --azul-oscuro: #0a192f;
      --azul-medio: #172a45;
      --azul-claro: #3a7bd5;
      --texto-blanco: #e6f1ff;
      --texto-claro: #ccd6f6;
      --texto-secundario: #8892b0;
      --acento-verde: #64ffda;
      --borde-grisaceo: #7a8ba9;
    }

    body {
      background-color: var(--azul-profundo);
      color: var(--texto-claro);
      font-family: 'Segoe UI', system-ui, sans-serif;
      margin: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    header {
      padding: 1rem 2rem;
      border-bottom: 1px solid var(--azul-medio);
      background-color: var(--azul-profundo);
      position: sticky;
      top: 0;
      z-index: 100;
    }

    nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      max-width: 1400px;
      margin: 0 auto;
    }

    .nav-left, .nav-right {
      display: flex;
      align-items: center;
      gap: 1.5rem;
    }

    .logo {
      display: flex;
      align-items: center;
      gap: 1rem;
      color: var(--texto-blanco);
      text-decoration: none;
      font-weight: 600;
      font-size: 1.1rem;
      transition: all 0.3s ease;
    }

    .logo:hover {
      color: var(--acento-verde);
    }

    .auth-button {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      transition: all 0.3s ease;
      font-size: 0.9rem;
      text-decoration: none;
      cursor: pointer;
    }

    .login-button {
      color: var(--texto-claro);
      border: 1px solid var(--borde-grisaceo);
      background: none;
    }

    .login-button:hover {
      background-color: rgba(122, 139, 169, 0.1);
      border-color: var(--texto-claro);
    }

    .register-button {
      background-color: rgba(100, 255, 218, 0.1);
      color: var(--acento-verde);
      border: 1px solid var(--acento-verde);
    }

    .register-button:hover {
      background-color: rgba(100, 255, 218, 0.2);
    }

    .logout-button {
      background-color: rgba(244, 67, 54, 0.1);
      color: #f44336;
      border: 1px solid #f44336;
    }

    .logout-button:hover {
      background-color: rgba(244, 67, 54, 0.2);
    }

    .auth-button svg {
      width: 1rem;
      height: 1rem;
    }

    footer {
      margin-top: auto;
      padding: 2rem;
      text-align: center;
      border-top: 1px solid var(--azul-medio);
      color: var(--texto-secundario);
      background-color: var(--azul-profundo);
    }

    footer a {
      color: var(--acento-verde);
      text-decoration: none;
    }

    footer a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <header>
    <nav>
      <div class="nav-left">
        <a href="/" class="logo">
          <svg width="24" height="24" viewBox="0 0 40 40" fill="none">
            <circle cx="20" cy="20" r="19" stroke="currentColor" stroke-width="2"/>
            <path d="M12 20C12 25 16 28 20 28C24 28 28 25 28 20C28 15 24 12 20 12" stroke="currentColor" stroke-width="2"/>
          </svg>
          CelestiaCom
        </a>
      </div>
      <div class="nav-right">
        {!isLoggedIn ? (
          <>
            <a href="/login" class="auth-button login-button">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"/>
                <polyline points="10 17 15 12 10 7"/>
                <line x1="15" y1="12" x2="3" y2="12"/>
              </svg>
              Iniciar Sesi칩n
            </a>
            <a href="/register" class="auth-button register-button">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <line x1="19" y1="8" x2="19" y2="14"/>
                <line x1="22" y1="11" x2="16" y2="11"/>
              </svg>
              Registrar Estaci칩n
            </a>
          </>
        ) : (
          <button id="logout-btn" class="auth-button logout-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
              <polyline points="16 17 21 12 16 7"/>
              <line x1="21" y1="12" x2="9" y2="12"/>
            </svg>
            Cerrar Sesi칩n
          </button>
        )}
      </div>
    </nav>
  </header>

  <main>
    <slot />
  </main>

  <footer>
    <p>&copy; {new Date().getFullYear()} CelestiaCom. <a href="https://github.com/CeliaChavezV">Celia</a></p>
  </footer>

  <script>
    // Manejar logout
    document.getElementById('logout-btn')?.addEventListener('click', () => {
      localStorage.removeItem('celestia_currentUser');
      window.location.href = '/';
    });

    // Redirigir si ya est치 autenticado
    if (localStorage.getItem('celestia_currentUser') && 
        (window.location.pathname === '/login' || window.location.pathname === '/register')) {
      window.location.href = '/dashboard';
    }
  </script>
</body>
</html>