---
import Layout from '../../layouts/Layout.astro';
import { createStation } from '../../lib/stations';
import { getCurrentUser } from '../../lib/auth';

const user = getCurrentUser();

if (!user) {
  return Astro.redirect('/auth/login');
}

let error = null;

const handleSubmit = async (e) => {
  e.preventDefault();
  const formData = new FormData(e.target);
  const newStation = {
    name: formData.get('name'),
    description: formData.get('description'),
    isPublic: formData.get('visibility') === 'public'
  };
  
  try {
    await createStation(newStation, user.uid);
    window.location.href = '/';
  } catch (err) {
    error = err.message;
  }
};
---

<Layout title="Nueva Estación | CelestiaCom">
  <main class="new-station">
    <h1>Crear Nueva Estación Terrena</h1>
    
    {error && <div class="error-message">{error}</div>}
    
    <form on:submit={handleSubmit} class="station-form">
      <div class="form-group">
        <label for="name">Nombre de la Estación</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          required
          placeholder="Ej: Estación Alpha"
        />
      </div>
      
      <div class="form-group">
        <label for="description">Descripción</label>
        <textarea 
          id="description" 
          name="description" 
          rows="4"
          placeholder="Describe tu estación..."
        ></textarea>
      </div>
      
      <div class="form-group">
        <label>Visibilidad</label>
        <div class="radio-group">
          <label>
            <input 
              type="radio" 
              name="visibility" 
              value="public" 
              checked
            />
            <span>Pública (visible para todos)</span>
          </label>
          <label>
            <input 
              type="radio" 
              name="visibility" 
              value="private"
            />
            <span>Privada (solo visible para ti)</span>
          </label>
        </div>
      </div>
      
      <div class="form-actions">
        <button type="submit" class="btn primary">Crear Estación</button>
        <a href="/" class="btn secondary">Cancelar</a>
      </div>
    </form>
  </main>
</Layout>

<style>
  .new-station {
    max-width: 600px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  
  .error-message {
    background: rgba(255, 100, 100, 0.1);
    color: var(--error-color);
    padding: 1rem;
    border-radius: 4px;
    margin-bottom: 1.5rem;
    border-left: 4px solid var(--error-color);
  }
  
  .station-form {
    margin-top: 2rem;
  }
  
  .form-group {
    margin-bottom: 1.5rem;
  }
  
  label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }
  
  input[type="text"],
  textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    font-family: inherit;
    background: var(--card-bg);
    color: inherit;
  }
  
  textarea {
    resize: vertical;
    min-height: 100px;
  }
  
  .radio-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }
  
  .radio-group label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: normal;
    cursor: pointer;
  }
  
  .form-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }
  
  .btn {
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
    border: none;
    cursor: pointer;
  }
  
  .primary {
    background: var(--accent-color);
    color: white;
  }
  
  .primary:hover {
    background: var(--accent-dark);
    transform: translateY(-2px);
  }
  
  .secondary {
    background: transparent;
    color: var(--text-secondary);
    border: 1px solid var(--border-color);
  }
  
  .secondary:hover {
    background: rgba(255, 255, 255, 0.05);
  }
</style>