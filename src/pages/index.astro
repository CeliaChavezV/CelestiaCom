---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import BlogCard from '../components/BlogCard.astro';

// Solo contenido estático durante el build
const posts = await getCollection('blog');
---

<Layout title="CelestiaCom - Inicio">
  <main class="container">
    <section class="blog-section">
      <h1>Últimas Publicaciones</h1>
      <div class="blog-grid">
        {posts.map(post => (
          <a href={`/${post.slug}`} class="card-link">
            <BlogCard
              title={post.data.title}
              description={post.data.description}
              image={post.data.image}
            />
          </a>
        ))}
      </div>
    </section>

    <div id="stations-app">
      <div class="loading-message">Cargando estaciones...</div>
    </div>
  </main>

  <!-- Script para carga dinámica en el cliente -->
  <script is:inline>
    document.addEventListener('DOMContentLoaded', async () => {
      try {
        // Cargar Firebase y funciones necesarias
        const { initializeApp } = await import('firebase/app');
        const { getFirestore, collection, query, where, getDocs } = await import('firebase/firestore');
        const { getAuth } = await import('firebase/auth');
        
        // Configuración de Firebase
        const firebaseConfig = {
          apiKey: import.meta.env.PUBLIC_FIREBASE_API_KEY,
          authDomain: import.meta.env.PUBLIC_FIREBASE_AUTH_DOMAIN,
          projectId: import.meta.env.PUBLIC_FIREBASE_PROJECT_ID,
          storageBucket: import.meta.env.PUBLIC_FIREBASE_STORAGE_BUCKET,
          messagingSenderId: import.meta.env.PUBLIC_FIREBASE_MESSAGING_SENDER_ID,
          appId: import.meta.env.PUBLIC_FIREBASE_APP_ID
        };

        // Inicializar Firebase
        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const auth = getAuth(app);

        // Obtener estaciones públicas
        const publicStationsQuery = query(
          collection(db, 'stations'), 
          where('isPublic', '==', true)
        );
        const publicSnapshot = await getDocs(publicStationsQuery);
        const publicStations = publicSnapshot.docs.map(doc => ({
          id: doc.id,
          ...doc.data()
        }));

        // Obtener estaciones del usuario si está autenticado
        let userStations = [];
        const user = auth.currentUser;
        
        if (user) {
          const userStationsQuery = query(
            collection(db, 'stations'),
            where('ownerId', '==', user.uid)
          );
          const userSnapshot = await getDocs(userStationsQuery);
          userStations = userSnapshot.docs.map(doc => ({
            id: doc.id,
            ...doc.data()
          }));
        }

        // Renderizar las estaciones
        const appContainer = document.getElementById('stations-app');
        appContainer.innerHTML = `
          <section class="stations-section">
            <h1>Estaciones Terrestres</h1>
            
            <div class="stations-grid">
              ${publicStations.map(station => `
                <a href="/stations/${station.id}" class="station-card">
                  <h3>${station.name}</h3>
                  <p>${station.description}</p>
                </a>
              `).join('')}
            </div>

            ${user ? `
              <h2>Mis Estaciones</h2>
              <div class="stations-grid">
                ${userStations.map(station => `
                  <a href="/stations/${station.id}" class="station-card owner">
                    <h3>${station.name}</h3>
                    <p>${station.description}</p>
                    <span class="badge">Tu estación</span>
                  </a>
                `).join('')}
              </div>
              <a href="/stations/new" class="button primary">+ Nueva Estación</a>
            ` : ''}
          </section>
        `;
      } catch (error) {
        console.error('Error loading stations:', error);
        document.getElementById('stations-app').innerHTML = `
          <div class="error-message">
            Error al cargar las estaciones. Por favor recarga la página.
          </div>
        `;
      }
    });
  </script>

  <style>
    :root {
      --azul-oscuro: #0a192f;
      --azul-medio: #172a45;
      --texto-claro: #e6f1ff;
      --destacado: #64ffda;
      --card-bg: #020c1b; /* 4 tonos más oscuro que el original */
      --card-border: #64ffda; /* Borde azul claro */
      --text-secondary: #8892b0;
      --error-color: #ff6b6b;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem;
      background-color: var(--azul-oscuro);
      color: var(--texto-claro);
    }
    
    .blog-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 2rem;
      margin: 2rem 0;
    }
    
    .card-link {
      text-decoration: none;
      transition: transform 0.3s ease;
    }
    
    .card-link:hover {
      transform: translateY(-5px);
    }

    .stations-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 1.5rem;
      margin: 2rem 0;
    }
    
    .station-card {
      background: var(--card-bg);
      color: var(--destacado);
      border: 1px solid var(--card-border);
      border-radius: 8px;
      padding: 1.5rem;
      transition: all 0.3s ease;
    }
    
    .station-card:hover {
      transform: translateY(-5px);
      border-color: var(--texto-claro);
    }
    
    .station-card.owner {
      border-left: 4px solid var(--destacado);
    }
    
    .station-card h3 {
      color: var(--destacado);
      margin-bottom: 0.5rem;
    }
    
    .station-card p {
      color: rgba(100, 255, 218, 0.7);
    }
    
    .badge {
      display: inline-block;
      background: var(--destacado);
      color: var(--azul-oscuro);
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
      font-size: 0.8rem;
      margin-top: 0.5rem;
      font-weight: bold;
    }
    
    .button {
      display: inline-block;
      padding: 0.75rem 1.5rem;
      border-radius: 4px;
      text-decoration: none;
      font-weight: 500;
      transition: all 0.3s ease;
    }
    
    .primary {
      background: var(--destacado);
      color: var(--azul-oscuro);
      border: 1px solid transparent;
    }
    
    .primary:hover {
      background: transparent;
      color: var(--destacado);
      border-color: var(--destacado);
    }
    
    .loading-message, .error-message {
      text-align: center;
      padding: 2rem;
      color: var(--text-secondary);
    }
    
    .error-message {
      color: var(--error-color);
    }

    @media (max-width: 1200px) {
      .blog-grid {
        grid-template-columns: repeat(3, 1fr);
      }
    }
    
    @media (max-width: 900px) {
      .blog-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    
    @media (max-width: 600px) {
      .blog-grid, .stations-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</Layout>