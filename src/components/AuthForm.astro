---
interface Props {
  mode: 'login' | 'register';
}

const { mode } = Astro.props;
---

<form class="auth-form">
  <h2>{mode === 'login' ? 'Iniciar Sesión' : 'Registrar Nueva Estación'}</h2>

  {mode === 'register' && (
    <div class="form-group">
      <label for="station-name">Nombre de la Estación</label>
      <input type="text" id="station-name" required />
    </div>
  )}

  <div class="form-group">
    <label for="email">Correo Electrónico</label>
    <input type="email" id="email" required />
  </div>

  <div class="form-group">
    <label for="password">Contraseña</label>
    <input type="password" id="password" required minlength="8" />
  </div>

  {mode === 'register' && (
    <div class="form-group">
      <label for="frequency">Banda de Frecuencia</label>
      <input type="text" id="frequency" placeholder="Ej: 144 MHz" />
    </div>
  )}

  <button type="submit" class="submit-button">
    {mode === 'login' ? 'Ingresar' : 'Registrar Estación'}
  </button>
</form>

<style>
  .auth-form {
    background: var(--azul-oscuro);
    padding: 2rem;
    border-radius: 8px;
    border: 1px solid var(--azul-medio);
  }

  .auth-form h2 {
    color: var(--texto-blanco);
    margin-top: 0;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .form-group {
    margin-bottom: 1.25rem;
  }

  .form-group label {
    display: block;
    color: var(--texto-claro);
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
  }

  .form-group input {
    width: 100%;
    padding: 0.75rem;
    background: var(--azul-profundo);
    border: 1px solid var(--azul-medio);
    border-radius: 4px;
    color: var(--texto-claro);
  }

  .submit-button {
    width: 100%;
    padding: 0.75rem;
    background: var(--acento-verde);
    color: var(--azul-profundo);
    border: none;
    border-radius: 4px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .submit-button:hover {
    background: #88ffea;
  }
</style>