---
interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image } = Astro.props;
---

<article class="blog-card">
  <img src={image} alt={title} loading="lazy" />
  <div class="content">
    <h2>{title}</h2>
    <p>{description}</p>
    <span class="read-more">Ver detalles →</span>
  </div>
</article>

<style>
  .blog-card {
    background: #020c1b;  /* Fondo ultra oscuro */
    border: 1px solid #7a8ba9;  /* Borde azul grisáceo claro */
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 
      0 4px 8px rgba(0, 0, 0, 0.3),
      inset 0 0 0 1px rgba(122, 139, 169, 0.2);
    position: relative;
  }
  
  .blog-card:hover {
    transform: translateY(-5px);
    box-shadow: 
      0 12px 24px rgba(0, 0, 0, 0.4),
      inset 0 0 0 1px rgba(122, 139, 169, 0.4);
    border-color: #a8b2d1;  /* Borde más claro al hacer hover */
    background: #031225;
  }

  .blog-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(122, 139, 169, 0.05) 0%,
      rgba(122, 139, 169, 0) 100%
    );
    pointer-events: none;
  }
  
  .blog-card img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    filter: brightness(0.7) contrast(1.2);
    transition: all 0.4s ease;
    border-bottom: 1px solid rgba(122, 139, 169, 0.4);
  }
  
  .blog-card:hover img {
    filter: brightness(0.85) contrast(1.3);
  }
  
  .content {
    padding: 1.5rem;
    position: relative;
    z-index: 1;
  }
  
  h2 {
    margin: 0;
    font-size: 1.25rem;
    color: #e6f1ff;  /* Blanco azulado */
    margin-bottom: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.5px;
  }
  
  p {
    margin: 0;
    color: #a8b2d1;  /* Azul grisáceo claro para texto */
    line-height: 1.6;
    font-size: 0.95rem;
  }
  
  .read-more {
    display: inline-block;
    margin-top: 1rem;
    color: #7a8ba9;  /* Azul grisáceo para acento */
    font-size: 0.9rem;
    font-weight: 500;
    transition: all 0.3s ease;
    position: relative;
  }
  
  .read-more::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: #a8b2d1;
    transition: width 0.3s ease;
  }
  
  .blog-card:hover .read-more {
    transform: translateX(4px);
    color: #ccd6f6;  /* Azul más claro al hacer hover */
  }
  
  .blog-card:hover .read-more::after {
    width: 100%;
  }
</style>