---
interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image } = Astro.props;
---

<article class="blog-card">
  <img src={image} alt={title} loading="lazy" />
  <div class="content">
    <h2>{title}</h2>
    <p>{description}</p>
    <span class="read-more">Ver detalles →</span>
  </div>
</article>

<style>
  .blog-card {
    background: #020c1b;  /* Azul casi negro - 4 tonos más oscuro que #0a192f */
    border: 1px solid #64ffda;
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 
      0 4px 8px rgba(0, 0, 0, 0.3),
      inset 0 0 0 1px rgba(100, 255, 218, 0.15);
    position: relative;
  }
  
  .blog-card:hover {
    transform: translateY(-5px);
    box-shadow: 
      0 12px 24px rgba(0, 0, 0, 0.4),
      inset 0 0 0 1px rgba(100, 255, 218, 0.3);
    border-color: #e6f1ff;
    background: #031225;  /* Mínimo cambio al hacer hover */
  }

  .blog-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(100, 255, 218, 0.03) 0%,
      rgba(100, 255, 218, 0) 100%
    );
    pointer-events: none;
  }
  
  .blog-card img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    filter: brightness(0.7) contrast(1.2);
    transition: all 0.4s ease;
    border-bottom: 1px solid rgba(100, 255, 218, 0.3);
  }
  
  .blog-card:hover img {
    filter: brightness(0.85) contrast(1.3);
  }
  
  .content {
    padding: 1.5rem;
    position: relative;
    z-index: 1;
  }
  
  h2 {
    margin: 0;
    font-size: 1.25rem;
    color: #e6f1ff;
    margin-bottom: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.5px;
  }
  
  p {
    margin: 0;
    color: #8892b0;  /* Azul grisáceo claro para mejor legibilidad */
    line-height: 1.6;
    font-size: 0.95rem;
  }
  
  .read-more {
    display: inline-block;
    margin-top: 1rem;
    color: #64ffda;
    font-size: 0.9rem;
    font-weight: 500;
    transition: all 0.3s ease;
    position: relative;
  }
  
  .read-more::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: #64ffda;
    transition: width 0.3s ease;
  }
  
  .blog-card:hover .read-more {
    transform: translateX(4px);
    color: #e6f1ff;
  }
  
  .blog-card:hover .read-more::after {
    width: 100%;
  }
</style>